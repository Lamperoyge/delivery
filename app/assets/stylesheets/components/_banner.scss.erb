.banner {
  position: relative;
  background-image: linear-gradient(-180deg, rgba(234, 82, 111, 0.33) 7%, rgba(244, 244, 244, 0.23) 38% ), url('<%= asset_path("alex-knight-177111.jpg") %>');
  background-size: cover !important;
  background-position: center;
  height: 70vh;
  margin: 0;
  text-align: center;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}


.banner-content {
  h1 {
    background-color: #EA526F;
    padding: 14px;
  }
  p {
    text-shadow: 1px 1px 1px black;
  }
}
